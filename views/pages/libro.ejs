<script type="text/javascript">
    let pagination = 1;
    let paginacion = 1;
    let unoEnglish = 0;
    let dosEnglish = 0;
    let unoSpanish = 0;
    let dosSpanish = 0;

    function changeEnglish(pag) {
        if (pag === '1') {
            unoEnglish = 1;
            dosEnglish = 2;
            pagination = pag;
        } else if (pag === '2') {
            unoEnglish = 3;
            dosEnglish = 4;
            pagination = pag;
        } else if (pag === '3') {
            unoEnglish = 5;
            dosEnglish = 6;
            pagination = pag;
        } else if (pag === '4') {
            unoEnglish = 7;
            dosEnglish = 8;
            pagination = pag;
        } else if (pag === '5') {
            unoEnglish = 9;
            dosEnglish = 10;
            pagination = pag;
        } else if (pag === '6') {
            unoEnglish = 11;
            dosEnglish = 12;
            pagination = pag;
        } else if (pag === 'next') {
            let num = Number(pagination);
            num++;
            changeEnglish(num.toString());
        } else if (pag === 'prev') {
            let num = Number(pagination);
            num--;
            changeEnglish(num.toString());
        }
        $('#img1Eng').attr('src', 'img/instrucciones/Eng/' + unoEnglish + '.jpg');
        $('#img2Eng').attr('src', 'img/instrucciones/Eng/' + dosEnglish + '.jpg');
    }
    function changeSpanish(pag) {
        if (pag === '1') {
            unoSpanish = 1;
            dosSpanish = 2;
            paginacion = pag;
        } else if (pag === '2') {
            unoSpanish = 3;
            dosSpanish = 4;
            paginacion = pag;
        } else if (pag === '3') {
            unoSpanish = 5;
            dosSpanish = 6;
            paginacion = pag;
        } else if (pag === '4') {
            unoSpanish = 7;
            dosSpanish = 8;
            paginacion = pag;
        } else if (pag === '5') {
            unoSpanish = 9;
            dosSpanish = 10;
            paginacion = pag;
        } else if (pag === '6') {
            unoSpanish = 11;
            dosSpanish = 12;
            paginacion = pag;
        } else if (pag === 'next') {
            let num = Number(paginacion);
            num++;
            changeSpanish(num.toString());
        } else if (pag === 'prev') {
            let num = Number(paginacion);
            num--;
            changeSpanish(num.toString());
        }
        $('#img1Spa').attr('src', 'img/instrucciones/Spa/' + unoSpanish + '.jpg');
        $('#img2Spa').attr('src', 'img/instrucciones/Spa/' + dosSpanish + '.jpg');
    }
</script>

