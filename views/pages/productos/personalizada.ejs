<div class="modal fade" id="modalName" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-body mx-3">
                <div class="row">
                    <div class="col-sm">
                        <img src="/img/placa/personalizada/1792.jpg" style="width: 100%">
                    </div>
                    <div class="col-sm">
                        <div class="md-form">
                            <input type="text" id="nombre" class="form-control" onkeypress="setLink()" maxlength="13">
                            <label for="nombre">Nombre</label>
                        </div>
                        <div class="md-form">
                            <input type="number" id="celular" class="form-control"
                                   onKeyPress="if(this.value.length===10) return false; setLink();">
                            <label for="celular">Celular</label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer d-flex justify-content-center">
                <!--                <a href="../pagar?tipo=personalizada&name=Abril moya">Abril</a>-->
                <a id="linkCompra" class="btn btn-outline-success waves-effect"
                   href="../pagar?tipo=premium">Enviar
                </a>
                <button class="btn btn-outline-danger" class="close" data-dismiss="modal"
                        aria-label="Close">Cancelar
                </button>
            </div>
        </div>
    </div>
</div>


<!-- SCRIPTS -->
