<script>

    function setLink() {
        setTimeout(function () {
            let name = document.getElementById('nombre').value;
            let cel = document.getElementById('celular').value;
            console.log(name + cel);
            document.getElementById('linkCompra').href = '../pagar?tipo=personalizada&name=' + name + '&cel=' + cel;
        }, 10);
    }
</script>


